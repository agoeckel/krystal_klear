<%= simple_form_for(@work_order) do |f| %>
  <%= f.error_notification %>

  <h2><%= @work_order.job.name %></h2>

  <div class="form-inputs">
    <%= f.input :final_price %>
    <%= f.input :notes , placeholder: "notes", label: false %>
    <%= f.input :complete %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
