<p id="notice"><%= notice %></p>

<h1 class="name-header">Week (put week # with ERB here)<%=  %> Schedule</h1>

<div id='route-container'>
  <% if @routes.any? %>
    <% @routes.each do |route| %>
      <a href="/routes/<%= route.id %>">
        <div class="route">
          <table class='route-tile'>
          <tr>
            <th class='route-name' colspan='2'><%= route.name %></th>
          </tr>
          <tr>
            <td class='png'><i class='fa fa-sun-o'></i></td>
            <td class='png'><i class='fa fa-cloud'></i></td>
          </tr>
          <tr>
            <td class='route-amount'>$<%= Random.rand(200..300) %></td>
            <td class='route-amount'>$<%= Random.rand(175..200) %></td>
          </tr>
        </table>
        </div>
      </a>
    <% end %>
  <% end %>
</div>

<div class="grid-container">
  <table class="grid-table">
    <thead>
      <tr class="grid-head">
        <th class="grid-th fixed">Employee</th>
        <th class='fixed'>Monday</th>
        <th class='fixed'>Tuesday</th>
        <th class='fixed'>Wednesday</th>
        <th class='fixed'>Thursday</th>
        <th class='fixed'>Friday</th>
        <th class='fixed'>Saturday</th>
        <th class='fixed'>Sunday</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="grid-td"><%= user.name %></td>
          <td class='droppable'></td>
          <td class='droppable'></td>
          <td class='droppable'></td>
          <td class='droppable'></td>
          <td class='droppable'></td>
          <td class='droppable'></td>
          <td class='droppable'></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
