<div class="form_container">
  <%= simple_form_for([@client, @job]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :frequency %>
      <%= f.input :estimated_price %>
      <%= f.association :route, collection: Route.order(:name), prompt: "Choose a Route" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
